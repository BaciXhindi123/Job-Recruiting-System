@{
    ViewData["Title"] = "Home Page";
}

<body >
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        html {
            scroll-behavior: smooth; /* Enables smooth scrolling */
        }
        body {
            margin: 0 !important;
            padding: 0 !important;
            justify-content: center;
            align-items: center;
            height: 100vh;
            width:100vw;
            background-color: #f9f9f9;
        }

        .container {
            max-width:100% !important;
            text-align: center;
            margin: 0 !important;
            padding: 0 !important;
        }
        .h1 {
            margin-bottom: 30px;
            font-size: 2.5rem;
            color: #333;
        }

        .options {
            display: flex;
            justify-content: center;
            gap: 30px;
        }

        .card {
            background-color: #02577a;
            width: 300px;
            height: 425px;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: white;
            cursor: pointer;
            transition: transform 0.6s ease, box-shadow 0.6s ease;
        }

            .card:hover {
                background-color: #02577d;
                transform: scale(1.05);
                box-shadow: 0 4px 10px blue);
            }

        .icon img {
            width: 100px;
            height: 100px;
            margin-bottom: 15px;
        }

        .card p {
            font-size: 1.2rem;
            font-weight: bold;
        }

        /* Full-screen setup */
        html, body {
            width: 100%;
			height: 100%;
        }

        .home {
            width: 100%;
            height: 100vh;
            background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 1)),url('\\images\\home.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .text_area {
            width: 30%;
            margin: 50px;
            padding: 15px 20px;
            /* border-left:2px solid white;
            border-right: 2px solid white;
            border-radius: 5%; */
            color: white;
        }

        .text_area_heading {
            font-size: 4rem;
            color: white;
            text-shadow: 0px 0px 5px white;
        }

        .text_area_paragraph {
            font-size: 1.5rem;
            text-shadow: 0px 0px 2px white;
        }

        .photo_area {
            width: 800px;
            height: 600px;
			background-image: url('images\\engineer.jpg');
            background-size: cover;
            background-position: center;
            border-radius: 5%;
            margin: 10px;
        }

        .btn_container {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

        .button-sign {
            width: 40%;
            height: 60px;
            border: 2px solid white;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .button-policy {
            width: 45%;
            height: 60px;
            border: 2px solid white;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .button-policy:hover {
                background-color: red;
                border: 2px solid red;
                color: white;
                text-shadow: 0px 0px 5px white;
                transition: 200ms ease-in-out;
                cursor: pointer;
            }

            .button-policy a {
                font-style: bold;
                font-size: 2rem;
            }

        .button-sign a {
            font-style: bold;
            font-size: 2rem;
        }

        .button-sign:hover {
            background-color: green;
            border: 2px solid rgb(91, 212, 91);
            color: white;
            text-shadow: 0px 0px 5px white;
            transition: 200ms ease-in-out;
            cursor: pointer;
        }

        
    </style>
    <div class="home">
        <div class="text_area">
            <h2 class="text_area_heading">Welcome to Job Seeker</h2>
            <br>
            <p class="text_area_paragraph">Choose your job, find the best place for you, and get to know your oportunities.</p>
            <br>
            <br>
            <div class="btn_container">
                <div onclick="location.href='#sign_id'" class="button-sign"><a>Sign Up</a></div>
                <div class="button-policy"><a style="text-decoration:none;color:white;" href="@Url.Action("Policy", "Jobs")">Policy</a></div>
            </div>
        </div>
        <div class="photo_area"></div>
    </div>
    <div class="container">
        <br />
        <br />
        <br />
        <br />
        <br />
        <h1 class="h1">Ju lutem zgjidhni mënyrën e identifikimit:</h1>
        <br />
        <br />
        <div class="options" id="sign_id">
            <a asp-area="" asp-controller="Jobs" asp-action="Index">
            <div class="card">
                <div class="icon">
                    <img src="~/images/individual.png" alt="Qytetar Icon">
                </div>
                <p>Qytetar</p>
            </div></a>
            <a asp-area="" asp-controller="Jobs" asp-action="PostJob">
            <div class="card">
                <div class="icon">
                    <img src="~/images/bussiness.png" alt="Biznes Icon">
                </div>
                <p>Biznes</p>
            </div>
        </a>
        </div>
        <br />
        <br />
        <br />
        <br />
    </div>
</body>
